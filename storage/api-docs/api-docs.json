                                    "is_active": {
                                        "type": "boolean"
                                    },
                                    "trek_days": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
