            },
            "delete": {
                "tags": [
                    "Treks"
                ],
                "summary": "Delete a trek",
                "operationId": "1fb82b5f9bd1872961a7694923122c32",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
